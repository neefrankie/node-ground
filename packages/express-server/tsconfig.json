{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "dist",
    "noImplicitAny": true,
    "module": "CommonJS",
    "target": "ESNext",
    "lib": ["ESNext"],
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "include": [
      "src/**/*",
      "__test__/**/*"
    ],
  "exclude": [
    "package.json"
  ],
  "ts-node": {
    "compilerOptions": {
        "module": "CommonJS"
    }
  }
}
