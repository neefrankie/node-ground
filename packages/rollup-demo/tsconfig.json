{
  "$schema": "https://json.schemastore.org/tsconfig",

  "compilerOptions": {
    "rootDirs": ["client/scripts"],
    "lib": ["es2023", "DOM"],
    "module": "es2022",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "target": "es2022",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "client/**/*"
  ],
  "exclude": [
    "package.json",
    "node_modules"
  ]
}
