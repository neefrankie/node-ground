{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es6",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ES6",
    "skipLibCheck": true,
    "outDir": "dist",

    "moduleResolution": "node",
    "jsx": "react-jsx",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
  },
  "include": [
      "src/**/*",
      "test/**/*"
  ],
  "exclude": [
    "package.json"
  ],
  "ts-node": {
    "compilerOptions": {
        "module": "CommonJS"
    }
  }
}
